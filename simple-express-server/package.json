{
  "name": "simple-express-server",
  "version": "1.0.0",
  "description": "Simple express server with JWT implementation",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "test": "mocha --recursive --exit || true",
    "start": "node ./",
    "coverage": "npx nyc --show-process-tree npm run test",
    "beautify": "npx eslint --fix . --ignore-path ./.eslintignore",
    "eslint": "npx eslint . --ignore-path ./.eslintignore"
  },
  "author": "Arabinda Manna",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "celebrate": "^12.0.1",
    "chance": "^1.1.4",
    "const": "^1.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-jwt": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1"
  },
  "nyc": {
    "exclude": [
      "index.js",
      "test/"
    ],
    "check-coverage": true,
    "per-file": true,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": false,
    "cache": false,
    "report-dir": "./artifacts",
    "temp-directory": "./artifacts/temp"
  }
}
